<% layout('layouts/layout-empty') -%>
<style>
    body {
        background: #001B38;
    }

    .container {
        position: relative;
        top: 40%;
        transform: perspective(1px) translateY(-50%);
    }

    .logo {
        height: 50px;
        margin-bottom: 50px;
    }

    .text-center {
        text-align: center;
    }

    .panel {
        border-radius: 4px;
        background: white;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, .15);
    }



    .panel-body {
        padding: 30px;
    }

    .center-block {
        float: none;
        margin: 0 auto;
    }

    button.btn {
        display: block;
        outline: none;
        width: 100%;
        background:#77b800;
        border: none;
        font-size: 16px;
        padding-top: 15px;
        padding-bottom: 15px;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, .4);
        border: 1px solid #77b800;
    }

    input[type='text'],
    input[type='password'] {
        background: none;
        border: none;
        border-radius: 0px;
        border: 1px solid #ccc;
        font-size: 16px;
        outline: none;
    }

    .container {
        padding-top: 40px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-12 center-block text-center">
            <img class="logo" src="/images/beeline-one.svg" />
        </div>
    </div>
    <div class="row">

        <div class="col-sm-4 center-block">

            <div class="panel margin-top-50">

                <div class="panel-body">

                    <% if (message.length > 0) { %>
                    <div class="alert alert-danger">
                        <%= message %>
                    </div>

                    <% } %>

                    <form action="/login" method="post">
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control" name="username">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password">
                        </div>

                        <button type="submit" class="btn btn-primary btn-block btn-lg">Login</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>